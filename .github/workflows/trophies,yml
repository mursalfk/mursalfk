name: Generate self-hosted trophies

on:
  schedule:
    - cron: "0 3 * * *"     # daily at 03:00 UTC
  workflow_dispatch:

permissions:
  contents: write

jobs:
  build:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout
        uses: actions/checkout@v4

      # (Optional) Ensure the target folder exists
      - name: Prepare output folder
        run: mkdir -p assets

      - name: Build trophies (Metrics achievements)
        uses: lowlighter/metrics@latest
        with:
          token: ${{ secrets.METRICS_TOKEN }}   # classic PAT: public_repo + read:user
          user: mursalfk
          template: classic
          base: ""                              # keep the card focused
          filename: assets/profile-trophies.svg # <== deterministic path in repo
          config_timezone: Asia/Karachi

          # Achievements (trophies)
          plugin_achievements: yes
          plugin_achievements_threshold: C      # A/B/C tiers (C shows more)
          plugin_achievements_display: compact  # compact | detailed | emphasized
          plugin_achievements_secrets: yes

          # Commit the generated SVG
          output_action: commit
          committer_branch: ${{ github.event.repository.default_branch }}
          committer_message: "chore: update trophies (self-hosted)"

      # Debug: List what we just committed (shows in the job log)
      - name: List generated files
        run: ls -la assets || true
