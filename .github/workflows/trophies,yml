name: Generate self-hosted trophies

on:
  schedule:
    - cron: "0 3 * * *"          # daily at 03:00 UTC
  workflow_dispatch:

permissions:
  contents: write

jobs:
  build:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout
        uses: actions/checkout@v4
        with:
          fetch-depth: 0

      - name: Detect default branch
        id: branch
        run: |
          BRANCH=$(git remote show origin | sed -n '/HEAD branch/s/.*: //p')
          echo "branch=$BRANCH" >> "$GITHUB_OUTPUT"
          echo "Default branch is: $BRANCH"

      - name: Prepare output folders
        run: |
          mkdir -p assets
          rm -f assets/profile-trophies.svg

      # Generate "trophies"-like card (Achievements) to a temp folder
      - name: Build trophies (Metrics Achievements)
        uses: lowlighter/metrics@latest
        with:
          token: ${{ secrets.METRICS_TOKEN }}     # classic PAT: public_repo + read:user
          user: mursalfk
          template: classic
          base: ""                                # keep it focused on achievements
          filename: profile-trophies.svg          # write to temp render path
          config_timezone: Asia/Karachi

          plugin_achievements: yes
          plugin_achievements_threshold: C        # A/B/C (C shows more)
          plugin_achievements_display: compact    # compact | detailed | emphasized
          plugin_achievements_secrets: yes

          # Do NOT auto-commit; weâ€™ll handle the commit
          output_action: none

      - name: Inspect renders (debug)
        run: ls -la metrics_renders || true

      - name: Move render to repo path
        run: |
          mv metrics_renders/profile-trophies.svg assets/profile-trophies.svg
          ls -la assets

      - name: Commit & push
        run: |
          git checkout -B "${{ steps.branch.outputs.branch }}"
          git config user.name "github-actions[bot]"
          git config user.email "41898282+github-actions[bot]@users.noreply.github.com"
          git add assets/profile-trophies.svg
          git commit -m "chore: update trophies (self-hosted)" || echo "No changes"
          git push origin "${{ steps.branch.outputs.branch }}"
